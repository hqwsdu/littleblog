<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zt.feeling.MainActivity"
    android:background="#444444"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/my_color"
        android:paddingLeft="16dp"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/main_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="菜单"
            android:gravity="left|center"
            android:background="@null"
            android:onClick="mainOnClick"/>
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="7"
            android:gravity="center"
            android:id="@+id/main_group"
            android:checkedButton="@+id/tuijian_blog"
            >

            <RadioButton
                android:id="@+id/mainAll_blog"
                android:padding="3dp"
                android:text="全部博客"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/left_radiobtn"
                android:textColor="@color/main_text"/>
            <RadioButton
                android:id="@+id/mainMy_blog"
                android:padding="3dp"
                android:background="@drawable/right_radiobtn"
                android:text="我的博客"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:textColor="@color/main_text"/>
        </RadioGroup>

        <Button
            android:id="@+id/main_write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="发布"
            android:onClick="mainOnClick"




            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>






</LinearLayout>
